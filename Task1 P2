package myjavaprojects;

import java.util.Scanner;

public class task1p2 
{
	public static void main(String[] args)
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter name");
		String name= sc.nextLine();
		System.out.println("Enter Department");
		String department= sc.nextLine();
		System.out.println("Enter Roll number");
		int roll=sc.nextInt();
		System.out.println("Enter University");
		String univ= sc.next();

		System.out.println("Name: "+name);
		System.out.println("Department: "+department);
		System.out.println("University roll number: "+roll);
		System.out.println("University: "+univ);
		
		System.out.println("Enter the marks of five subject");
		int marks1=sc.nextInt();
		int marks2=sc.nextInt();
		int marks3=sc.nextInt();
		int marks4=sc.nextInt();
		int marks5=sc.nextInt();
		
		int per;
		per=(marks1+marks2+marks3+marks4+marks5)/5;
		
		System.out.println("Marks of Five Subjects are:");
		System.out.println("Marks 1:"+marks1);
		System.out.println("Marks 2:"+marks2); 
		System.out.println("Marks 3:"+marks3);
		System.out.println("Marks 4:"+marks4);
		System.out.println("Marks 5:"+marks5);
		System.out.println("Percentage:"+per);
		
		
	}
	
}
